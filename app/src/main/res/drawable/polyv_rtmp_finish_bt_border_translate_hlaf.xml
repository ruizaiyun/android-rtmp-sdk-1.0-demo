<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape >
            <solid android:color="@color/polyv_rtmp_white_share"/>
            <corners android:radius="35dp"/>
        </shape>
    </item>

    <!--除了item中的边距的背景色，内圆角,除了item中的边距的边距大小的背景色(透明会被覆盖)  -->
    <item android:right="2dp" android:bottom="2dp" android:left="2dp" android:top="2dp">
        <shape >
            <solid android:color="@color/polyv_rtmp_translucence_share"/>
            <corners android:radius="35dp"/>
        </shape>
    </item>

</layer-list>